<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/collaborationacceptedbg"
    tools:context=".CollaborationComicView">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="210dp">


        <TextView
            android:id="@+id/commentViewButton"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="90dp"
            android:layout_marginTop="40dp"
            android:text="@string/comment_view"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/pink_blue_button" />


        <TextView
            android:id="@+id/comicViewButton"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:text="@string/comic_view"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:shadowColor="#DFE8E6E6"
            android:shadowDx="10"
            android:shadowDy="8"
            android:shadowRadius="8"
            android:background="@drawable/pink_blue_button" />

    </LinearLayout>

    <TextView
        android:id="@+id/comicDetailsButton"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/cd"/>

    <TextView
        android:id="@+id/DoodleComicButton"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/dc"/>



</LinearLayout>