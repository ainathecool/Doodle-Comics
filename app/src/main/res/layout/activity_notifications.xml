<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/notificationsbg"
    tools:context=".Notifications">

    <TextView
        android:id="@+id/homepageDrawer"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/draweropen_icon" />


    <TextView
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/checknotificationsbutton" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/notificationssetting_button"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/collaborationrequestbutton"/>

</LinearLayout>