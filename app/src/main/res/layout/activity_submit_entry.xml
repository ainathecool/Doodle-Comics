<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/challengesubmitentrybg"
    tools:context=".SubmitEntry">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@drawable/challengetextbox"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_marginStart="55dp">


        <TextView
            android:id="@+id/existingComic"
            android:layout_width="220dp"
            android:layout_height="63dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/existing_comic"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/pink_blue_button" />


        <TextView
            android:id="@+id/newComic"
            android:layout_width="220dp"
            android:layout_height="63dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/new_comic"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/pink_blue_button" />


    </LinearLayout>



</LinearLayout>