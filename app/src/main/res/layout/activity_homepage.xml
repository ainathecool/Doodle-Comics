<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homepagebg"
    tools:context=".Homepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/homepageDrawer"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/draweropen_icon" />

        <TextView
            android:id="@+id/profileScreen"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:background="@drawable/profile_icon"
            android:layout_marginStart="250dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ExploreComics"
        android:textSize="20sp"
        android:textColor="#FEFFFF"
        android:shadowColor="#DF706F6F"
        android:shadowDx="4"
        android:shadowDy="8"
        android:shadowRadius="8"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:layout_gravity="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exploreComicsRecyclerView"
            android:layout_width="160dp"
            android:layout_height="180dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:padding="8dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/uploadComicScreen"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/comic_upload"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ExploreArtists"
        android:textSize="20sp"
        android:textColor="#FEFFFF"
        android:shadowColor="#DF706F6F"
        android:shadowDx="4"
        android:shadowDy="8"
        android:shadowRadius="8"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_gravity="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exploreArtistsRecyclerView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:padding="8dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/createYourComic"
            android:layout_marginStart="5dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/createyourcomic_homepage_icon" />


    </LinearLayout>

    <TextView
        android:id="@+id/ChallengeOfTheDayScreen"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pink_button"
        android:gravity="center"
        android:shadowColor="#DF706F6F"
        android:shadowDx="4"
        android:shadowDy="8"
        android:shadowRadius="8"
        android:text="@string/challenge_of_the_day"
        android:textColor="@color/white"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="1dp"
        android:textSize="25sp" />

</LinearLayout>