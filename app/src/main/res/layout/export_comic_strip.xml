<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/createcomicoptionsbg"
    >
    <!-- text in the middle of blue box background -->
    <!-- text in the middle of blue box background -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Format?"
        android:textSize="27dp"
        android:shadowColor="#DF706F6F"
        android:shadowDx="20"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="265dp"
        android:layout_marginBottom="20dp"
        />

    <!-- button to export comic strip as a pdf -->
    <TextView
        android:id="@+id/png_button"
        android:layout_width="220dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text=".PNG"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/pink_blue_button" />

    <TextView
        android:id="@+id/pdf_button"
        android:layout_width="220dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text=".PDF"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/pink_blue_button" />



</LinearLayout>