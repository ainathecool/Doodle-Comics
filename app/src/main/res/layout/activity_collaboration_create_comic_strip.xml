<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/collaborationcreatecomicstripbg"
    tools:context=".CollaborationCreateComicStrip">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginTop="110dp"
        android:layout_gravity="center"
        android:background="@drawable/createcomicstripbg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_comic_title"
            android:textSize="16sp"
            android:textColor="#FEFFFF"
            android:layout_marginTop="40dp"
            android:layout_marginStart="45dp"
            android:layout_gravity="start"/>

        <EditText
            android:gravity="center"
            android:hint="@string/dots"
            android:id="@+id/comicTitle"
            android:inputType="text"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/purplebgcomiccreationfields" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_comic_genre"
            android:textSize="16sp"
            android:textColor="#FEFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginStart="45dp"
            android:layout_gravity="start"/>

        <EditText
            android:gravity="center"
            android:hint="@string/dots"
            android:inputType="text"
            android:id="@+id/comicGenre"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/purplebgcomiccreationfields" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_comic_description"
            android:textSize="16sp"
            android:textColor="#FEFFFF"
            android:layout_marginTop="5dp"
            android:layout_marginStart="45dp"
            android:layout_gravity="start"/>

        <EditText
            android:gravity="center"
            android:hint="@string/dots"
            android:inputType="text"
            android:id="@+id/comicDescription"
            android:layout_width="220dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/purplebgcomiccreationfields" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_comic_cover"
            android:textSize="18sp"
            android:textColor="#FEFFFF"
            android:layout_marginStart="45dp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/comicCover"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/upload" />


    </LinearLayout>

    <TextView
        android:id="@+id/createComic"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/createStrip"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/pink_blue_button" />

</LinearLayout>