<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homepagebg"
    tools:context=".CreateNewComic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/homepageDrawer"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/draweropen_icon" />

        <TextView
            android:id="@+id/profileScreen"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:background="@drawable/profile_icon"
            android:layout_marginStart="250dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/CreateNewComicStrip"
        android:textSize="20sp"
        android:textColor="#FEFFFF"
        android:shadowColor="#DF706F6F"
        android:shadowDx="4"
        android:shadowDy="8"
        android:shadowRadius="8"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:layout_gravity="start"/>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:background="@drawable/createcomicstripbg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_comic_title"
            android:textSize="16sp"
            android:textColor="#FEFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginStart="35dp"
            android:layout_gravity="start"/>

        <EditText
            android:gravity="center"
            android:hint="@string/dots"
            android:id="@+id/comicTitle"
            android:inputType="text"
            android:layout_width="182dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/purplebgcomiccreationfields" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_comic_genre"
            android:textSize="16sp"
            android:textColor="#FEFFFF"
            android:layout_marginTop="5dp"
            android:layout_marginStart="35dp"
            android:layout_gravity="start"/>

        <EditText
            android:gravity="center"
            android:hint="@string/dots"
            android:inputType="text"
            android:id="@+id/comicGenre"
            android:layout_width="182dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/purplebgcomiccreationfields" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_comic_description"
            android:textSize="16sp"
            android:textColor="#FEFFFF"
            android:layout_marginTop="5dp"
            android:layout_marginStart="35dp"
            android:layout_gravity="start"/>

        <EditText
            android:gravity="center"
            android:hint="@string/dots"
            android:inputType="text"
            android:id="@+id/comicDescription"
            android:layout_width="182dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/purplebgcomiccreationfields" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_comic_cover"
            android:textSize="18sp"
            android:textColor="#FEFFFF"
            android:layout_marginStart="35dp"
            android:layout_gravity="start"/>

        <ImageView
            android:id="@+id/comicCover"
            android:layout_width="182dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/upload" />


    </LinearLayout>


    <TextView
        android:id="@+id/CreateStrip"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/pink_button"
        android:gravity="center"
        android:shadowColor="#DF706F6F"
        android:shadowDx="4"
        android:shadowDy="8"
        android:shadowRadius="8"
        android:text="@string/create_strip"
        android:textColor="@color/white"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="1dp"
        android:textSize="23sp" />

</LinearLayout>