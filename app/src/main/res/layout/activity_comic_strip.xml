<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/createcomicstripbg"
    tools:context=".ComicStrip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:text="@string/Title"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#E91E63"
            android:shadowColor="#DFE8E7E7"
            android:shadowDx="4"
            android:shadowDy="8"
            android:shadowRadius="8"
            android:gravity="start"/>

        <TextView
            android:id="@+id/uploadComicButton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:background="@drawable/upload02"/>


        <TextView
            android:id="@+id/collabComicButton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:background="@drawable/collab02"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/bg2">

        <TextView
            android:id="@+id/comicBubble01"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/comb01"/>

        <TextView
            android:id="@+id/comicBubble02"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/comb02"/>

        <TextView
            android:id="@+id/comicBubble03"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/comb03"/>

        <TextView
            android:id="@+id/comicBubble04"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/comb04"/>

        <TextView
            android:id="@+id/comicBubble05"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/comb05"/>

        <TextView
            android:id="@+id/comicBubble06"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/comb06"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/undoButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/undo"/>
        <TextView
            android:id="@+id/redoButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/redo"/>
        <TextView
            android:id="@+id/deleteButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/delete"/>
        <TextView
            android:id="@+id/exportButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/export"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/canvasContainer"
        android:layout_width="290dp"
        android:layout_height="390dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/canvas"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/bg2">

        <TextView
            android:id="@+id/tool1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/tool1"/>

        <TextView
            android:id="@+id/tool2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/tool2"/>

        <TextView
            android:id="@+id/tool3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/tool3"/>

        <TextView
            android:id="@+id/tool4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/tool4"/>

        <TextView
            android:id="@+id/tool5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/tool5"/>

        <TextView
            android:id="@+id/tool6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/tool6"/>

    </LinearLayout>


    <TextView
        android:id="@+id/createComic"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="@string/createComic"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/pink_blue_button" />

</LinearLayout>