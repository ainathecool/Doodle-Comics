<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/notificationsettingsbg"
    tools:context=".NotificationSettings">

    <TextView
        android:id="@+id/CheckLikesOn"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:background="@drawable/checklikesonpostbutton"
        android:layout_marginTop="130dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/CheckLikesOff"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/turnlikesofonpost_button"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/ViewCommentsOn"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/viewcommentsonpost_button"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/ViewCommentsOff"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/turnoffcommentsonpost_button"
        android:layout_gravity="center"/>


</LinearLayout>